<Window x:Class="ModeratorApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Модератор" Height="350" Width="500">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Виберіть файл з текстом:"/>
            <StackPanel Orientation="Horizontal" Margin="0,10,0,20">
                <TextBox Name="TextFilePathTextBox" Width="300" IsReadOnly="True" />
                <Button Content="Вибрати файл" Click="OnSelectTextFileClick" Width="100"/>
            </StackPanel>

            <TextBlock Text="Виберіть файл зі словами для модерації:"/>
            <StackPanel Orientation="Horizontal" Margin="0,10,0,20">
                <TextBox Name="ModerationFilePathTextBox" Width="300" IsReadOnly="True" />
                <Button Content="Вибрати файл" Click="OnSelectModerationFileClick" Width="100"/>
            </StackPanel>

            <Button Content="Запустити модерацію" Click="OnModerateButtonClick" Width="150" HorizontalAlignment="Left"/>

            <TextBlock Name="ResultTextBlock" Margin="20,20,0,0"/>
        </StackPanel>
    </Grid>
</Window>