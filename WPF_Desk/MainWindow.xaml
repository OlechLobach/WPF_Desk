<Window x:Class="ArrayOperationsApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Операції з Масивами" Height="350" Width="600">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Введіть або завантажте значення елементів масиву:"/>

            <!-- Кнопка для вибору файлу та завантаження масиву -->
            <StackPanel Orientation="Horizontal" Margin="0,10,0,20">
                <TextBox Name="FilePathTextBox" Width="350" />
                <Button Content="Вибрати файл" Click="OnSelectFileClick" Width="100"/>
                <Button Content="Завантажити масив" Click="OnLoadArrayFromFileClick" Width="120"/>
            </StackPanel>

            <!-- Введення або відображення значень масиву -->
            <TextBox Name="ArrayInputTextBox" Width="400" Height="30" Margin="0,10,0,20"/>

            <!-- Кнопка для збереження масиву у файл -->
            <Button Content="Зберегти у файл" Click="OnSaveArrayToFileClick" Width="200" HorizontalAlignment="Left"/>

            <!-- Відображення повідомлень -->
            <TextBlock Name="ResultTextBlock" Margin="20,20,0,0"/>
        </StackPanel>
    </Grid>
</Window>