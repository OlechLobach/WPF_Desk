<Window x:Class="FileStatisticsApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Статистика файлу" Height="400" Width="600">
    <Grid>
        <StackPanel Margin="20">

            <StackPanel Orientation="Horizontal" Margin="0,10,0,20">
                <TextBox Name="FilePathTextBox" Width="350" IsReadOnly="True" />
                <Button Content="Вибрати файл" Click="OnSelectFileClick" Width="100"/>
            </StackPanel>

            <Button Content="Отримати статистику" Click="OnGetFileStatisticsClick" Width="200" HorizontalAlignment="Left" Margin="0,10,0,20"/>

            <TextBlock Name="StatisticsTextBlock" Margin="20,20,0,0" TextWrapping="Wrap"/>
        </StackPanel>
    </Grid>
</Window>