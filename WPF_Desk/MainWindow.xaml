<Window x:Class="FileReversalApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Перевернути Файл" Height="250" Width="450">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Введіть шлях до файлу:"/>
            <StackPanel Orientation="Horizontal" Margin="0,10,0,20">
                <TextBox Name="FilePathTextBox" Width="300" />
                <Button Content="Вибрати файл" Click="OnSelectFileClick" Width="100"/>
            </StackPanel>

            <Button Content="Перевернути файл" Click="OnReverseFileClick" Width="150" HorizontalAlignment="Left"/>

            <TextBlock Name="ResultTextBlock" Margin="20,20,0,0"/>
        </StackPanel>
    </Grid>
</Window>