<Window x:Class="RandomNumberGenerator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Генератор Чисел" Height="350" Width="500">
    <Grid>
        <StackPanel Margin="20">
            <Button Content="Згенерувати та зберегти числа" Click="OnGenerateAndSaveClick" Width="200" HorizontalAlignment="Left"/>
            <StackPanel Margin="20,20,0,0">
                <TextBlock Text="Статистика:" FontWeight="Bold"/>
                <TextBlock Name="EvenCountTextBlock"/>
                <TextBlock Name="OddCountTextBlock"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>