<Window x:Class="FileViewerApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Переглядач Файлів" Height="350" Width="600">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Введіть шлях до файлу:"/>

            <StackPanel Orientation="Horizontal" Margin="0,10,0,20">
                <TextBox Name="FilePathTextBox" Width="350" />
                <Button Content="Вибрати файл" Click="OnSelectFileClick" Width="100"/>
            </StackPanel>

            <Button Content="Показати вміст" Click="OnShowFileContentClick" Width="200" HorizontalAlignment="Left"/>

            <TextBox Name="FileContentTextBox" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" TextWrapping="Wrap" Height="200"/>
        </StackPanel>
    </Grid>
</Window>