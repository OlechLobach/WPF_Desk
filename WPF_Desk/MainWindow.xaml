<Window x:Class="FileSearchApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Пошук у файлі" Height="350" Width="600">
    <Grid>
        <StackPanel Margin="20">

            <StackPanel Orientation="Horizontal" Margin="0,10,0,20">
                <TextBox Name="FilePathTextBox" Width="350" IsReadOnly="True" />
                <Button Content="Вибрати файл" Click="OnSelectFileClick" Width="100"/>
            </StackPanel>

            <TextBlock Text="Введіть слово для пошуку:"/>
            <TextBox Name="SearchWordTextBox" Width="350" Margin="0,10,0,20"/>

            <StackPanel Orientation="Horizontal" Margin="0,10,0,20">
                <Button Content="Знайти слово" Click="OnFindWordClick" Width="150"/>
                <Button Content="Підрахувати входження" Click="OnCountOccurrencesClick" Width="200"/>
                <Button Content="Пошук у зворотному порядку" Click="OnReverseSearchClick" Width="250"/>
            </StackPanel>

            <TextBlock Name="ResultTextBlock" Margin="20,20,0,0"/>
        </StackPanel>
    </Grid>
</Window>