<Window x:Class="NumberAnalysisApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Аналіз Чисел" Height="350" Width="600">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Введіть шлях до файлу:"/>
            <StackPanel Orientation="Horizontal" Margin="0,10,0,20">
                <TextBox Name="FilePathTextBox" Width="350" />
                <Button Content="Вибрати файл" Click="OnSelectFileClick" Width="100"/>
            </StackPanel>

            <Button Content="Проаналізувати файл" Click="OnAnalyzeFileClick" Width="200" HorizontalAlignment="Left"/>

            <StackPanel Margin="20,20,0,0">
                <TextBlock Text="Статистика:" FontWeight="Bold"/>
                <TextBlock Name="PositiveCountTextBlock"/>
                <TextBlock Name="NegativeCountTextBlock"/>
                <TextBlock Name="TwoDigitCountTextBlock"/>
                <TextBlock Name="FiveDigitCountTextBlock"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>