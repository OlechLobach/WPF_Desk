<Window x:Class="WordReplacementApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Замінник Слів" Height="350" Width="500">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Виберіть файл для обробки:"/>
            <StackPanel Orientation="Horizontal" Margin="0,10,0,20">
                <TextBox Name="FilePathTextBox" Width="300" IsReadOnly="True" />
                <Button Content="Вибрати файл" Click="OnSelectFileClick" Width="100"/>
            </StackPanel>

            <TextBlock Text="Введіть слово для пошуку:"/>
            <TextBox Name="SearchTextBox" Width="200" Margin="0,10,0,20"/>

            <TextBlock Text="Введіть слово для заміни:"/>
            <TextBox Name="ReplaceTextBox" Width="200" Margin="0,10,0,20"/>

            <Button Content="Зробити заміну" Click="OnReplaceButtonClick" Width="150" HorizontalAlignment="Left"/>

            <TextBlock Name="ResultTextBlock" Margin="0,20,0,0"/>
        </StackPanel>
    </Grid>
</Window>