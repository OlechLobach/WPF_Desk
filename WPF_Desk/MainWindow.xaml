<Window x:Class="ArraySaveApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Збереження Масиву" Height="300" Width="500">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Введіть значення елементів масиву (через пробіл):"/>

            <TextBox Name="ArrayInputTextBox" Width="400" Height="30" Margin="0,10,0,20"/>

            <Button Content="Зберегти у файл" Click="OnSaveArrayToFileClick" Width="200" HorizontalAlignment="Left"/>

            <TextBlock Name="ResultTextBlock" Margin="20,20,0,0"/>
        </StackPanel>
    </Grid>
</Window>